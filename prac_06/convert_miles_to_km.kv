BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline:
            on_text: app.handle_convert(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up
                text: 'Up'
                font_size: 48
                color: (1, .75, 1, 1)
                on_press: app.handle_increment(1)
            Button:
                id: down
                text: 'Down'
                font_size: 48
                color: (1, .75, 1, 1)
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        text: ''
        color: (1, 1, 0, 1)